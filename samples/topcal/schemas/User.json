{
    "type": "object",
    "$schema": "http://json-schema.org/draft-03/schema",
    "id": "http://www.topcal.co/api/v1/schema/user",
    "title": "User",
    "required": true,
    "properties": {
        "id": {
            "type": "string",
            "required": false
        },
        "email": {
            "type": "string",
            "required": true
        },
        "password": {
            "type": "string",
            "required": false
        },
        "name": {
            "type": "string",
            "required": false
        },
        "role": {
            "enum": [ "common", "manager", "admin" ],
            "required": false
        },
        "dailyCalories": {
            "type": "number",
            "required": false
        }
    }
}
